{% extends "base.html.twig" %}

{% block title %}Ajout d'un trick
{% endblock %}

{% block body %}
	<div class="container">

		<div class="row text-center">
			<div class="col">
				<div class="p-3 mb-2 bg-light">
					<h1 class="h2 pb-3 text-center">Ajout d'un trick</h1>
					{{ form_start(form) }}
					{{ form_row(form.name) }}
					{{ form_row(form.description) }}
					{{ form_row(form.category) }}
					{{ form_row(form.images) }}

					{# <div class="add_video">
										{{ form_row(form.video.vars.prototype) }}
										</div> #}

					<div class="form">
						<ul class="videos" data-index="{{ form.video|length > 0 ? form.video|last.vars.name + 1 : 0 }}" data-prototype="{{ form_row(form.video.vars.prototype)|e('html_attr') }}"></ul>
					</div>
					
					<div>
						<button type="button" class="btn btn_add_video_link" data-collection-holder-class="videos">Add</button>
					</div>

					<button type="submit" class="btn btn-success">Ajouter le tricks</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

