{% extends "base.html.twig" %}

{% block title %}Ajout d'un trick
{% endblock %}

{% block body %}
	<div class="container">

		<div class="row text-center">
			<div class="col">
				<div class="p-3 mb-2 bg-light">
					<h1 class="h2 pb-3 text-center">Ajout d'un trick</h1>
					{{ form_start(form) }}
					{{ form_row(form.name) }}
					{{ form_row(form.description) }}
					{{ form_row(form.category) }}
					{{ form_row(form.images) }}
					{{ form_row(form.video.vars.prototype) }}
					<button type="submit" class="btn btn-success">Ajouter le tricks</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{# Script pour changer le nom du fichier lors de l'upload #}
	<script type="application/javascript">
		$('input[type="file"]').change(function (e) {
var fileName = e.target.files[0].name;
$('.custom-file-label').html(fileName);
});
	</script>
{% endblock %}
