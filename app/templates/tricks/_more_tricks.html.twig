{% set nb = offset %}
{% for trick in tricks|slice(nb, nb + 5) %}
<div class="col">
  <div class="card h-100 mb-3 shadow-sm">
    {% include "partials/_main_picture.html.twig" with { "tricks" : trick.medias, "display" : "img"} %}
    <div class="card-text">
      <div class="row mt-3 ms-3">
        <div class="col-6"><a href="{{ path('app_trick', {'slug' : trick.slug})}}">
            <h5 class="card-title">{{trick.name}}</h5>
          </a>
        </div>
        <div class="col-6">
          {% include "partials/_link_trick.html.twig" with { "user" : app.user, "class1" : "row", "class2" : "col-6",
          "edit" : "" , "delete": ""}%}
        </div>
      </div>
    </div>
  </div>
</div>
{% endfor %}